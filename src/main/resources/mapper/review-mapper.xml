    <insert id="insert" parameterType="review" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO review 
        	(camping_id, 
        	writer_id, 
        	sido_code, 
        	gugun_code, 
        	title, 
        	content)
        VALUES
        	(#{campingId}, 
        	#{writerId}, 
        	#{sidoCode}, 
        	#{gugunCode}, 
        	#{title}, 
        	#{content})
    </insert>

	<select id="selectById" parameterType="int" resultType="review">
		SELECT * 
		FROM review 
		WHERE id=#{id}
	</select>
	
	<delete id="delete" parameterType="int">
		DELETE 
		FROM review 
		WHERE id=#{id}
	</delete>

	<update id="update" parameterType="review">
		UPDATE review
		SET title = #{title},
        	content = #{content}
		WHERE id = #{id}
	</update>
	
	<select id="selectAll" resultType="review">
		SELECT *
		FROM review
	</select>
	
	<select id="selectByCampingId" parameterType="int" resultType="review">
		SELECT *
		FROM review
		WHERE camping_id = #{campingId}
	</select>
	
	<select id="selectByCondition" parameterType="map" resultType="Review">
	    SELECT r.*
	    FROM review r
	    JOIN sidos s ON s.sido_code = r.sido_code
	    JOIN guguns g ON g.gugun_code = r.gugun_code
	    <where>
	        <if test="sidoCode != null">
	            r.sido_code = #{sidoCode}
	        </if>
	        <if test="gugunCode != null">
	            AND r.gugun_code = #{gugunCode}
	        </if>
	        <if test="keyword != null and keyword != ''">
	            AND (r.title LIKE CONCAT('%', #{keyword}, '%') 
	                 OR r.content LIKE CONCAT('%', #{keyword}, '%'))
	        </if>
	    </where>
	</select>
	
</mapper>
